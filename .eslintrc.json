{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "comma-dangle": "off",
    "no-underscore-dangle": "off",
    "quotes": ["error", "double"],
    "object-curly-newline": "off",
    "react/jsx-one-expression-per-line": "off",
    "react-hooks/exhaustive-deps": "warn"
  }
}
